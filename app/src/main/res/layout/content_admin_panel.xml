<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AdminPanelActivity"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_admin_panel">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >


        <TextView
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mange_contact_us"
            android:textSize="24sp"
            android:textColor="#000"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <EditText
            android:textAlignment="center"
            android:hint="@string/_number_hint"
            android:id="@+id/newNumber"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מספר טלפון חדש"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">


        <EditText
            android:id="@+id/newEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="11"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="55dp"
            android:text="אמייל חדש" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/xxxxxx"
            android:layout_width="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שעות פעילות של המשרד"
            android:textSize="24dp"
            android:textColor="#000"

            android:textDirection="ltr"
            android:textAlignment="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/closing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="סגירה"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/opening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="פתיחה"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/day"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="יום"
            android:textAlignment="center"
            android:textColor="#000"
            android:textDirection="ltr"
            android:textSize="18dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/newSClosing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:textColor="#000"
            android:textSize="18dp"
            android:textAlignment="center"
            android:inputType="time"
            />

        <EditText
            android:id="@+id/newSOpen"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="00:00"
            android:textDirection="ltr"
            android:textColor="#000"
            android:textSize="18dp"
            android:inputType="time"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/daySText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="'א"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="@drawable/boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/newMClosing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:inputType="time"/>

        <EditText
            android:id="@+id/newMOpening"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="00:00"
            android:textDirection="ltr"
            android:textColor="#000"
            android:textSize="18dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dayMText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="'ב"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="@drawable/boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/newTClosing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="00:00"
            android:inputType="time"
            android:textColor="#000"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/newTOpening"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="00:00"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dayTText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="'ג"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="@drawable/boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/newWClosing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:hint="00:00"/>
        <EditText
            android:id="@+id/newWOpening"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="00:00"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dayWText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="18dp"
            android:text="'ד"
            android:textDirection="ltr"
            android:textAlignment="center"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="@drawable/boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/newT2Closing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:textColor="#000"
            android:textSize="18dp"
            android:textAlignment="center"
            android:hint="00:00"/>
        <EditText
            android:id="@+id/newT2Opening"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="00:00"
            android:textColor="#000"
            android:textSize="18dp"
            android:textDirection="ltr"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dayT2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_weight="1"
            android:text="'ה"
            android:textDirection="ltr"
            android:textAlignment="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submet_changes_Contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submet"/>
    </LinearLayout>




</LinearLayout>